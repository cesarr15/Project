
<div>
    <h2>Show Event</h2>
    
    <table class="tableCenter">
        <tr>
              <td class="columnLabel boldText">Event Image:</td>
            <td><%=image_tag @event.image.url(:small) %></td> 
        </tr>
        <tr>
            <td class="columnLabel boldText">Name:</td>
            <td><%= @event.name %></td>
        </tr>
        <tr>
            <td class="columnLabel boldText">Link to Event:</td>
            <td><%= @event.link_to_event %></td>
        </tr>
    </table>
    <div class="divCenter">
        <%= link_to("Back to list", events_path, :class => "btn btn-warning btn-sm") %>
    </div>
</div>
